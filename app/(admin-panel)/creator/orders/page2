    <script>
        function backToOrders() {
            document.getElementById('order-view-page').style.display = 'none';
            document.getElementById('orders-page').style.display = 'block';
        }

        function openStatusModal() {
            document.getElementById('status-modal').classList.remove('hidden');
        }

        function closeStatusModal() {
            document.getElementById('status-modal').classList.add('hidden');
        }

        // Add event listener for status update button
        document.querySelector('[onclick="updateOrderStatus(\'68a48049e9428c64c4fffcb0\')"]')?.addEventListener('click', function() {
            openStatusModal();
        });
    </script>
